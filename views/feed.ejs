<%- include('partials/header') -%>
  <body class="body-bg container min-vh-100">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <%if(posts[i].user == user.id){ %>

          <li class="col-12 justify-content-center mt-3">
            <a class="text-decoration-none text-color" href="/post/<%= posts[i]._id%>">
              <span><%=moment.utc(posts[i].date).format('Do MMMM, YYYY') %></span>
            </a>
          </li>
          <%}%>
        <% } %>
        </ul>
      </body>
